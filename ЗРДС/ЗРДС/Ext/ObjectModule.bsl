	|	ИГС_ЗРДС.Ссылка В(&СписокСсылок)";

	СписокСсылок = Новый Массив();
	СписокСсылок.Добавить(СсылкаНаОбъект);
	ЗаявкаНДФЛ = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(СсылкаНаОбъект, "ЗаявкаНДФЛ");
	Если ЗначениеЗаполнено(ЗаявкаНДФЛ) Тогда
		СписокСсылок.Добавить(ЗаявкаНДФЛ);
	КонецЕсли; 
	Запрос.УстановитьПараметр("СписокСсылок", СписокСсылок);

	Результат = Запрос.Выполнить();
	ВыборкаПоШапке = Результат.Выбрать();

	ПервыйДокумент 	= Истина;
	ТаблицаОплат 	= Неопределено;
	
	Пока ВыборкаПоШапке.Следующий() Цикл
		
		Если ПервыйДокумент Тогда
			ПервыйДокумент = Ложь;
		Иначе
			ТабДокумент.ВывестиГоризонтальныйРазделительСтраниц();
		КонецЕсли; 
		
		// ИГС ИД Компания, Мостовых Д.В. 25.12.2019 {
		//Шапка = Макет.ПолучитьОбласть("Шапка" + ?(ВыборкаПоШапке.ВидЗатрат = Перечисления.игс_ВидЗатратЗаявкиНаОплату.ОсновноеПроизводство, "", "БезПроекта"));
